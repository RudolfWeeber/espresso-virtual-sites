############ compiler settings

# for MPI
CC=mpicc

# optimized compiler flags
CFLAGS=-g -O3 -mtune=G5 -mcpu=G5 -faltivec -finline-limit=10000000 \
        -fschedule-insns -fschedule-insns2 \
        -funroll-loops -frerun-cse-after-loop -ffast-math

############ name of makedepend (or gcc -ME)
DEPEND=makedepend

############ C++ compiler settings
CXX=mpiCC

############ linker settings
LINK=$(CC)
LDLIBS=-O3 -L/usr/local/lib -lfftw -lrfftw -lmpi -lm -ltcl

# FFTW. Note this is VERY specific for our cluster
CFLAGS += -I/usr/local/include

############ MDINLINE defines how to declare inline functions
CFLAGS+= -DMDINLINE="static"

############ special flags for C++ compilation
CXXFLAGS=$(CFLAGS)
